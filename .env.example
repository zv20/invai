# Server Configuration
PORT=3000
NODE_ENV=development

# Security - JWT_SECRET is auto-generated on first run
# You can manually set it here if you prefer, but it's not required
# Minimum 32 characters recommended
# JWT_SECRET=your-custom-secret-here-if-you-want
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-session-secret-change-this

# Admin Setup (First-time only)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# GitHub Updates
GITHUB_REPO=zv20/invai

# Backup Configuration
MAX_BACKUPS=10
BACKUP_DIR=./backups

# Database
DATABASE_PATH=./inventory.db

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

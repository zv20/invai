{
  "name": "grocery-inventory",
  "version": "0.10.6",
  "description": "Professional inventory management system with intelligence and analytics",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration --runInBand --forceExit",
    "test:all": "jest --coverage --runInBand --forceExit",
    "test:setup": "node scripts/create-test-user.js",
    "backup:create": "node scripts/create-backup.js",
    "backup:restore": "node scripts/restore-backup.js",
    "backup:list": "node scripts/restore-backup.js --list",
    "jwt:status": "node scripts/jwt-status.js",
    "jwt:rotate": "node scripts/rotate-jwt.js",
    "jwt:generate": "node scripts/generate-jwt.js",
    "version:current": "node scripts/bump-version.js",
    "version:bump": "node scripts/bump-version.js",
    "version:patch": "node scripts/bump-version.js patch",
    "version:minor": "node scripts/bump-version.js minor",
    "version:major": "node scripts/bump-version.js major"
  },
  "keywords": ["inventory", "grocery", "management", "analytics", "reports", "security", "testing", "backup", "charts"],
  "author": "zv20",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "pg": "^8.11.3",
    "node-cron": "^3.0.3",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.4",
    "json2csv": "^6.0.0-alpha.2",
    "web-push": "^3.6.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "@types/jest": "^29.5.11"
  },
  "optionalDependencies": {
    "@aws-sdk/client-s3": "^3.478.0",
    "backblaze-b2": "^1.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "lib/**/*.js",
      "routes/**/*.js",
      "controllers/**/*.js",
      "middleware/**/*.js",
      "!lib/**/*.test.js",
      "!node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFiles": ["./tests/setup.js"],
    "testTimeout": 15000
  }
}
